<div class="admin-post-wrapper">
    <%= javascript_include_tag "markdown.js" %>

    <h1>Admin#new</h1>

    <div class="admin-post-form">
        <%= form_for @entry, :url => admin_create_path, :id => "previewForm" do |f| %>
            <p>
                <%= f.label :title %><br>
                <%= f.text_field :title, { "v-on" => "keyup: preview", "class" => "title" } %>
            </p>

            <p>
                <%= f.label :content %><br>
                <%= f.text_area :content, { "v-on" => "keyup: preview", "class" => "content" } %>
            </p>

            <p>
                <%= f.submit %>
            </p>
        <% end %>
    </div>

    <div class="admin-post-preview">
        <div id="entryTitle"></div>
        <div id="preview"></div>
    </div>
</div>

