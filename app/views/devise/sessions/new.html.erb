<div class="admin-signin-wrapper">

    <% flash.each do |key, value| %>
        <div class="bg-warning devise-error-message">
            <a class="close" data-dismiss="alert">Ã—</a>
            <%= value %>
        </div>
    <% end %>

    <div class="admin-signin-form">
        <h2>Please Sign in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="control-group">
                <%= f.label :email, class: "control-label" %> 
                <div class="controls">
                    <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
                </div>
            </div>

            <div class="control-group">
                <%= f.label :password, class: "control-label" %>
                <div class="controls">
                    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
                </div>
            </div>

            <div class="control-group">
                <div class="controls">
                    <% if devise_mapping.rememberable? -%>
                        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                    <% end -%>

                    <div><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></div>
                </div>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>

